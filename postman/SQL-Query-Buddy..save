          "raw": "{\n  \"question\": \"Which product category generated the most revenue last month?\",\n  \"session_id\": \"{{session_id}}\",\n  \"user_id\": \"{{user_id}}\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/rag/query",
          "host": ["{{base_url}}"],
          "path": ["rag", "query"]
        },
        "description": "Tests RAG retrieval of multiple related tables"
      },
      "response": []
    },
    {
      "name": "5. Get All User Memories",
      "request": {
        "method": "GET",
